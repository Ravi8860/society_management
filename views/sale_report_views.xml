<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="society_flat" inherit_id="sale.report_saleorder_document">
		<xpath expr="//div[@id='informations']" position="inside">
			  <div t-if="doc.flat_no_id" class="col-auto mw-100 mb-2">
                    <strong>Flat</strong>
                    <p class="m-0" t-field="doc.flat_no_id"/>
                </div>
		</xpath>
	</template>

	<template id="society_flattype" inherit_id="sale.report_saleorder_document">
		<xpath expr="//div[@id='informations']" position="inside">
			  <div t-if="doc.flattype" class="col-auto mw-100 mb-2">
                    <strong>Flattype</strong>
                    <p class="m-0" t-field="doc.flattype"/>
                </div>
		</xpath>
	</template>

	<template id="society_block" inherit_id="sale.report_saleorder_document">
		<xpath expr="//div[@id='informations']" position="inside">
			  <div t-if="doc.block" class="col-auto mw-100 mb-2">
                    <strong>Block</strong>
                    <p class="m-0" t-field="doc.block"/>
                </div>
		</xpath>
	</template>
</odoo>